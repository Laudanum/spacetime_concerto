name = Spacetime Emergent 
description = "Sub theme of Twitter Bootstrap for the Spacetime Concerto site."
version = 0.3
core = 7.x

base theme = twitter_bootstrap

regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'

features[] = logo
features[] = name
features[] = slogan
; features[] = node_user_picture
; features[] = comment_user_picture
features[] = favicon
features[] = main_menu
; features[] = secondary_menu

stylesheets[all][] = libs/css/spacetime.css
; disable responsive (too much work)
; stylesheets[all][] = libs/css/spacetime-responsive.css
stylesheets-conditional[IE][all][] = libs/css/ie.css
; stylesheets-conditional[IE 9][all][] = ie9.css
conditional-stylesheets[if IE][all][] = libs/css/ie.css
;conditional-stylesheets[if IE 8][all][] = css/ie/ie8.css
;conditional-stylesheets[if IE 7][all][] = css/ie/ie7.css
;conditional-stylesheets[if lt IE 7][all][] = css/ie/ie6-and-below.css

scripts[] = libs/js/spacetime.js
; scripts[] = libs/js/respond.min.js

settings[toggle_name] = 1
settings[toggle_search] = 0

; toggle on 1.7 here admin/config/development/jquery_update
dependencies[] = jquery_update

